{{> header}}
<style>
    nav {
        background-color: rgba(51, 51, 51, 0); /* Set the background color to transparent */
        border-top: none;
        padding-top: 50px;
    }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: table;
            width: 100%;
            table-layout: fixed;
            border-collapse: collapse;
        }

        nav li {
            display: table-cell;
            border-right: 1px solid #fff;
            border-left: 1px solid #fff;
            border-top: 1px solid #fff;
            border-bottom: none;
        }

            nav li:last-child {
                border-right: none;
            }

            nav li a {
                display: block;
                color: #fff;
                text-align: center;
                padding: 10px;
                text-decoration: none;
            }

            nav li:hover {
                background-color: #fff;
            }

                nav li:hover a {
                    color: #333;
                }

    .return-button {
        position: absolute;
        top: 0;
        right: 0;
        margin: 10px;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0);
        color: #fff;
        text-decoration: none;
        border: 1px solid #fff;
        border-radius: 5px;
    }

        .return-button:hover {
            background-color: #fff;
            color: #333;
        }

    input[type="text"] {
        padding: 5px;
        border: 1px solid #fff;
        border-radius: 5px 0 0 5px;
        background-color: transparent;
        color: #fff;
        width: 375px; /* Updated width */
    }
</style>
{{> navAdministrador}}

<div class="contenedor">
     <form action="updateEmpleado" method="post" style="margin-bottom: 20px;"> 
                <label for="idUsuario">ID USUARIO</label>
                <input type="text" id="idUsuario" name="idUsuario" required><br>

             <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" required><br>
                
                <label for="apellidos">APELLIDOS</label>
                <input type="text" id="apellidos" name="apellidos" required><br>

                <label for="email">CORREO</label>
                <input type="text" id="email" name="email" required><br>
                    <div class="error">
                        <p >{{error}}</p>
                    </div>
                <input type="submit" id="btnModificar" value="MODIFICAR">
            </form>

    <table id="tabla-empleados">
  <tr>
    <td>IdEmpleado</td>
    <td>Nombre</td>
    <td>Apellidos</td>
    <td>Correo</td>
  </tr>
  
</table>
</div>

<script src="js/empleado-logica.js" type="module"></script>
{{> footer}}